<script>
var startPosition = 0;
var endPosition  = 0;

  function showSpechar() {
	startPosition = $("#message").prop("selectionStart");
	endPosition = $("#message").prop("selectionEnd");
	
	$("#btn_spechar_close").on('click', function () {
        $("#spechar-modal").dialog("close");
        return false;
    });
    
    
    $("#spechar-modal a").each(function(){
		$(this).unbind("click");
		$(this).click(function(){
// 			$("#spechar-modal").dialog("close");
			
			$(".main-msg").remove();	

			messageByteCheck($(this).text());
			startPosition += $(this).text().length;
			endPosition += $(this).text().length;
		});
    });
    
    console.log($("#spechar-modal").offset());
    console.log($("#message").position());
    
    $("#spechar-modal").dialog({
        modal: true,
        width: "480px",
        position: { 
            my : 'left top', // dialog 기준점
            at : 'right top', // target 기준점
            of : '#message'  // target
        },
        open: function () {
          $(this).css('padding', '0px');
        },
      });
    $(".ui-dialog-titlebar").hide();
  }
  
</script>